<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/closed"
        android:drawable="@drawable/dot_closed"
        android:state_selected="true" />

    <item
        android:id="@+id/open"
        android:drawable="@drawable/dot_open" />

    <transition
        android:fromId="@+id/open"
        android:toId="@+id/closed"
        android:drawable="@drawable/dot_anim"
        android:reversible="true"/>
</animated-selector>
